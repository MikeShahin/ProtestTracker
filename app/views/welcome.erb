<div class="container">
  <header><img src="https://i.imgur.com/Sg4nncX.jpg" class="img-responsive main-image"></header>
  <div class="select">
    <% if logged_in? %>
      <h3>Welcome Back <%= @user.username %></h3>
    <% end %>

    <h2>Protest Tracker: Track Protests Globally!</h2>
    
    <% if !logged_in? %>
        <a href="/protests"><img src="/images/protests.png"></a>
        <br>
        <br>
        <a href="/login"><img src="/images/login.png"></a>
        <br>
        <br>
        <a href="/signup"><img src="/images/signup.png"></a>
        <br>
        <br>
    <% end %>

    <% if logged_in? %>
        <form action="/logout" method="post">
            <a href="/protests"><img src="/images/protests.png"></a>
            <br>
            <br>
            <a href="/protests/new"><img src="/images/new.png"></a>
            <br>
            <br>
            <input type="submit" name="logout" class="logout">
        </form>
    <% end %>

</div>
