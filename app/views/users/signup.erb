<% unless locals.empty? %>
    <%= message %>
<% end %>

<h2>Sign Up</h2>
<form action="/signup" method="POST">
    <p>Name: <input type="text" name="username"></p>
    <p>Email: <input type="email" name="email"></p>
    <p>Password: <input type="password" name="password"></p>
    <input type="submit" class="btn btn-primary">
</form>